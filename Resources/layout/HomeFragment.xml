

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="250dp"
        android:paddingLeft="40dp"
        android:id="@+id/wrapper_fragment_main">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textStyle="bold"
                android:text="NoSleep"
        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1Undertext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:text="No new entry"
        />
            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="300dp"
                android:contentDescription="icon1"
                android:id="@+id/imageView1" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/relativeLayout4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:text="Sleep"
        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2Undertext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:text="No new entry"
        />
            <ImageView
                android:src="@drawable/arrow"
                android:contentDescription="icon2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="300dp"
                android:id="@+id/imageView2" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:id="@+id/fragmentContent"
         />
<GridLayout
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:columnCount="3"
    android:layout_marginTop="33.5dp"
       >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
             android:layout_marginTop="35dp"
                    android:layout_marginLeft="30dp"
            android:layout_marginRight="43.5dp"
            ><!-- <ImageView
                  android:layout_width="10dp"
                  android:layout_height="10dp"
                android:src="@drawable/home"
            android:contentDescription="IconHome"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
       
        android:textAlignment="center"
        android:textSize="40px"

            android:textColor="@color/colorAccent"
            android:textStyle="bold"
        android:text="Home"
        android:id="@+id/homeNavBtn"

           />
        </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
            android:textStyle="bold"
    android:layout_marginTop="35dp"            android:textAlignment="center"
        android:textSize="30px"
        android:text="Journal"
        android:id="@+id/journalNavBtn"
             
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="3"
            android:textStyle="bold"
    android:layout_marginTop="35dp"            android:textAlignment="center"
        android:textSize="30px"
        android:text="Calendar"
        android:id="@+id/calendarNavBtn"
             />
</GridLayout>
    </RelativeLayout>